<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sml_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.pornographic.weight.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhouwei.mzbanner.MZBannerView
                android:id="@+id/mz_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                app:canLoop="true"
                app:indicatorAlign="center"
                app:open_mz_mode="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:weightSum="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/iv_hot"
                    android:drawableTop="@mipmap/l_chongzhi_gouwu"
                    android:drawablePadding="@dimen/dp_4"
                    android:gravity="center"
                    android:text="热播榜单"
                    android:textColor="#000"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/l_chongzhi_xizao"
                    android:drawablePadding="@dimen/dp_4"
                    android:gravity="center"
                    android:id="@+id/iv_select"
                    android:text="精选专题"
                    android:textColor="#000"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/l_chongzhi_yinshui"
                    android:drawablePadding="@dimen/dp_4"
                    android:gravity="center"
                    android:id="@+id/iv_member"
                    android:text="会员充值"
                    android:textColor="#000"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/l_chongzhi_yongcan"
                    android:drawablePadding="@dimen/dp_4"
                    android:id="@+id/iv_picture"
                    android:gravity="center"
                    android:text="日本大片"
                    android:textColor="#000"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/l_chongzhi_chuifeng"
                    android:drawablePadding="@dimen/dp_4"
                    android:gravity="center"
                    android:text="签到"
                    android:id="@+id/iv_sign"
                    android:textColor="#000"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_8"
                android:background="#fafafa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="AV女星"
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <com.example.pornographic.weight.ViewPageIndicator
                android:id="@+id/vi_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_home"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140" />
        </LinearLayout>
    </com.example.pornographic.weight.CustomScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>